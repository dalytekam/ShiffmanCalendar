<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter data for date:"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="20dp" />
    
    <View
        android:id="@+id/horizontal_line"
        android:layout_width="fill_parent"
		android:layout_height="2dip"
		android:background="#FF000000"
		android:layout_marginTop="20dp"
		android:layout_marginBottom="20dp"
		android:layout_below="@+id/button2" />
  
    <TableLayout
	    android:id="@+id/tableLayout1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center" >
				    
		    <TableRow
	        android:id="@+id/tableRow1"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:layout_gravity="center"
	        android:layout_marginBottom="15dp" >
    <TextView
        android:id="@+id/field1Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number of cigarettes smoked:"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/p2_editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:gravity="center"
        android:layout_gravity="center" >

        <requestFocus />
    </EditText>
    </TableRow>
    <TableRow
	        android:id="@+id/tableRow1"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:layout_gravity="center"
	        android:layout_marginBottom="15dp" >
    
    <TextView
        android:id="@+id/field2Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number of pieces of gum used:"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/p2_editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:gravity="center"
        android:layout_gravity="center" >

    </EditText>
    </TableRow>
    </TableLayout>

    <RelativeLayout
    	android:layout_width="wrap_content"
    	android:layout_height="match_parent"
    	android:orientation="vertical"
    	android:layout_marginTop="25dp"
    	android:layout_gravity="center" >
        
    <Button
        android:id="@+id/p2_cancel_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="400dp" />

    <Button
        android:id="@+id/p2_save_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Save"
        android:layout_toRightOf="@+id/p2_cancel_button" />
    
    </RelativeLayout>

</LinearLayout>
