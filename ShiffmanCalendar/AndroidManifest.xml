                <action android:name="android.intent.action.DEFAULT" />

                <category android:name="android.intent.category.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.shiffmancalendar.Configuration"
            android:label="SC UserConfig"
            android:icon="@drawable/icon_config_user">
