                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.shiffmancalendar.DataEntryCalendar"
            android:label="SC EnterData"
            android:icon="@drawable/icon_calendar_app">
